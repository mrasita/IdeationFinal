@model IEnumerable<Ideation.Models.Ideas>

@{
    ViewBag.Title = "YourIdeas";
}

<h2>Your Ideas</h2>

<div>


    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Idea)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Meeting)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Idea)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Meeting.Name)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>


</div>
